<div class="m-4">
  <form id="form" action="/perfil" method="post" enctype="multipart/form-data">
    <div class="custom-grid gap-4">
      <div class="col">
        <label for="img" class="w-40">
          <span>Selecionar Imagen</span>
          {{#if usuario.imagen}}
            <img
              src="/{{usuario.imagen}}"
              class="w-40 rounded-full"
              alt="perfil"
            />
          {{else}}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 448 512"
            ><!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path
                d="M224 256c70.7 0 128-57.31 128-128s-57.3-128-128-128C153.3 0 96 57.31 96 128S153.3 256 224 256zM274.7 304H173.3C77.61 304 0 381.6 0 477.3c0 19.14 15.52 34.67 34.66 34.67h378.7C432.5 512 448 496.5 448 477.3C448 381.6 370.4 304 274.7 304z"
              ></path></svg>
          {{/if}}

        </label>
        <input type="file" id="img" name="img" hidden />
      </div>
      <div class="col">
        <label for="nombre">Nombre</label>
        <input
          required
          placeholder="Nombre"
          type="text"
          name="nombre"
          value="{{usuario.nombre}}"
          class="input"
        />

      </div>
      <div class="col">
        <label for="correo">Correo</label>
        <input
          required
          placeholder="Correo"
          type="email"
          name="correo"
          value="{{usuario.correo}}"
          class="input"
        />

      </div>
      <div class="col">
        <label for="ciudad">Ciudad</label>
        <select name="ciudad" id="ciudad">
          {{#each ciudades}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col">
        <label for="direccion">Direccion</label>
        <textarea
          required
          placeholder="Direccion"
          name="direccion"
          cols="30"
          rows="10"
          class="input"
        >{{usuario.direccion}}</textarea>

      </div>
      <div class="col">
        <label for="telefono">Telefono</label>
        <input
          required
          placeholder="Telefono"
          class="input"
          minlength="8"
          maxlength="8"
          type="tel"
          value="{{usuario.telefono}}"
          name="telefono"
        />

      </div>
      {{#if conductor}}
        <div class="col">
          <label>Coche</label>
          <a href="/coches" class="btn-primary bg-white text-black self-start">
            {{#if usuario.imagenCarro}}
              Editar Coche
            {{else}}
              Agregar Coche
            {{/if}}
          </a>

        </div>

      {{/if}}
    </div>

    <button
      class="btn-primary bg-white text-black self-start my-4"
    >Actualizar</button>
  </form>
  {{#if error}}
    <p class="text-red-500 text-center">{{error}}</p>
  {{/if}}
</div>